<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Forcer HTTPS (optionnel, décommenter en production)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Rediriger vers index.php si le fichier/dossier n'existe pas
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [QSA,L]
</IfModule>

# Désactiver l'affichage des erreurs en production
php_flag display_errors Off

# Définir le fuseau horaire
php_value date.timezone "Europe/Paris"

# Augmenter les limites si nécessaire
php_value upload_max_filesize 10M
php_value post_max_size 10M
php_value max_execution_time 300

# Sécurité
<IfModule mod_headers.c>
    # Empêcher le clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Empêcher le MIME sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Activer la protection XSS
    Header always set X-XSS-Protection "1; mode=block"
    
    # Service Worker doit être servi depuis la racine
    <FilesMatch "sw\.js$">
        Header set Service-Worker-Allowed "/"
        Header set Cache-Control "no-cache"
    </FilesMatch>
    
    # Manifest
    <FilesMatch "manifest\.json$">
        Header set Content-Type "application/manifest+json"
    </FilesMatch>
</IfModule>

# Cache pour les assets statiques
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    
    # CSS et JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    
    # Pas de cache pour HTML et Service Worker
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType application/x-javascript "access plus 0 seconds"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>
