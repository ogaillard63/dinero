{% extends "layout.twig" %}

{% block title %}{{ bank ? 'Modifier' : 'Ajouter' }} une banque{% endblock %}

{% block content %}
    <div class="mb-8">
        <h2 class="text-3xl font-light text-primary">{{ bank ? 'Modifier' : 'Ajouter' }} une banque</h2>
    </div>

    {% if error %}
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
        <p>{{ error }}</p>
    </div>
    {% endif %}

    <div class="bg-white p-8 border border-gray-200 shadow-sm w-full">
        <form action="{{ bank ? '/banks/' ~ bank.id ~ '/edit' : '/banks/create' }}" method="POST">
            <div class="mb-8">
                <label class="block text-gray-700 text-[10px] font-bold mb-2 uppercase tracking-widest" for="name">
                    Nom de la banque
                </label>
                <input 
                    class="shadow-none appearance-none border border-gray-300 w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:border-gray-500" 
                    id="name" 
                    name="name" 
                    type="text" 
                    placeholder="Ex: BNP Paribas"
                    value="{{ bank ? bank.name : '' }}"
                    required
                >
            </div>

            <div class="flex justify-end space-x-4">
                <a href="/banks" class="btn btn-outline">
                    Annuler
                </a>
                <button class="btn btn-primary px-10" type="submit">
                    {{ bank ? 'Modifier' : 'Ajouter' }}
                </button>
            </div>
        </form>
    </div>
{% endblock %}
