{% extends "layout.twig" %}

{% block title %}Maintenance{% endblock %}

{% block content %}
    <h2 class="text-3xl font-light mb-8 text-primary">Maintenance</h2>

    <div class="grid grid-cols-1 gap-8">
        <!-- Backup section -->
        <div class="bg-white border border-gray-200 shadow-sm p-6">
            <h3 class="text-xl font-medium text-primary mb-4">Sauvegarde de la base de données</h3>
            <p class="text-gray-600 mb-4">Créez une sauvegarde complète de votre base de données.</p>
            
            <!-- Informations résumées -->
            <div class="bg-gray-50 border border-gray-200 p-4 mb-4 text-sm text-gray-700">
                <ul class="space-y-1">
                    <li>• Les 5 sauvegardes les plus récentes sont conservées automatiquement</li>
                    <li class="text-red-600 font-semibold">• ⚠️ Créez toujours une sauvegarde avant de restaurer !</li>
                </ul>
            </div>
            
            <button 
                onclick="createBackup()" 
                class="w-full bg-primary hover:bg-blue-700 text-white font-bold py-3 px-6 uppercase tracking-wider transition-colors mb-4"
            >
                Créer une sauvegarde
            </button>
            
            <div id="backup_message" class="hidden mb-4"></div>
            
            <!-- Liste des sauvegardes -->
            <div class="mt-6">
                <h4 class="text-base font-medium text-gray-900 mb-3">Sauvegardes disponibles</h4>
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="bg-gray-50">
                                <th class="px-6 py-3 border-b border-gray-200 text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                <th class="px-6 py-3 border-b border-gray-200 text-xs font-medium text-gray-500 uppercase tracking-wider">Taille</th>
                                <th class="px-6 py-3 border-b border-gray-200 text-xs font-medium text-gray-500 uppercase tracking-wider text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="backups_table" class="divide-y divide-gray-100">
                            {% for backup in backups %}
                            <tr class="hover:bg-gray-50 transition-colors" data-filename="{{ backup.filename }}">
                                <td class="px-6 py-4 text-sm text-gray-500">{{ backup.date }}</td>
                                <td class="px-6 py-4 text-sm text-gray-500">{{ backup.size }}</td>
                                <td class="px-6 py-4 text-right">
                                    <div class="flex justify-end space-x-2">
                                        <button onclick="restoreBackup('{{ backup.filename }}')" class="text-xs uppercase font-bold text-primary hover:text-blue-800 px-2 py-1 border border-blue-300 hover:border-blue-800 transition-colors">
                                            Restaurer
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="3" class="px-6 py-8 text-center text-sm text-gray-500">Aucune sauvegarde disponible</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 gap-8 mt-8">
        <!-- Balance Snapshots section -->
        <div class="bg-white border border-gray-200 shadow-sm p-6">
            <h3 class="text-xl font-medium text-primary mb-4">Snapshots de solde</h3>
            <p class="text-gray-600 mb-6">Recalculez les snapshots quotidiens du solde global pour mettre à jour le graphique du dashboard.</p>
            
            {% if snapshotInfo.count > 0 %}
            <div class="mb-4 p-3 bg-gray-50 border border-gray-200 text-sm">
                <p><strong>Snapshots existants :</strong> {{ snapshotInfo.count }}</p>
                <p><strong>Du :</strong> {{ snapshotInfo.first_date|date("d/m/Y") }} <strong>au :</strong> {{ snapshotInfo.last_date|date("d/m/Y") }}</p>
            </div>
            {% endif %}
            
            <button 
                onclick="rebuildSnapshots()" 
            <button 
                onclick="rebuildSnapshots()" 
                class="w-full bg-primary hover:bg-blue-700 text-white font-bold py-3 px-6 uppercase tracking-wider transition-colors mb-4"
            >
                Recalculer tous les snapshots
            </button>
            
            <div id="snapshot_message" class="hidden"></div>
        </div>
    </div>


    <script>
        function createBackup() {
            const messageDiv = document.getElementById('backup_message');
            messageDiv.className = 'hidden';
            
            fetch('/maintenance/backup/create', {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    messageDiv.className = 'bg-green-100 border-l-4 border-green-500 text-green-700 p-4';
                    messageDiv.textContent = `Sauvegarde créée avec succès: ${data.filename} (${data.size})`;
                    
                    // Reload page to show new backup
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    messageDiv.className = 'bg-red-100 border-l-4 border-red-500 text-red-700 p-4';
                    messageDiv.textContent = 'Erreur: ' + data.error;
                }
            })
            .catch(error => {
                messageDiv.className = 'bg-red-100 border-l-4 border-red-500 text-red-700 p-4';
                messageDiv.textContent = 'Erreur lors de la création de la sauvegarde';
            });
        }

        function restoreBackup(filename) {
            if (!confirm(`⚠️ ATTENTION ⚠️\n\nVous êtes sur le point de restaurer la base de données.\nToutes les données actuelles seront remplacées par celles de la sauvegarde:\n\n${filename}\n\nCette action est IRRÉVERSIBLE.\n\nVoulez-vous continuer ?`)) {
                return;
            }

            if (!confirm('Dernière confirmation : Êtes-vous ABSOLUMENT SÛR de vouloir restaurer cette sauvegarde ?')) {
                return;
            }

            fetch('/maintenance/backup/restore', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: 'filename=' + encodeURIComponent(filename)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('✓ Base de données restaurée avec succès !\n\nLa page va se recharger.');
                    window.location.reload();
                } else {
                    alert('❌ Erreur: ' + data.error);
                }
            })
            .catch(error => {
                alert('❌ Erreur lors de la restauration');
            });
        }

        function deleteBackup(filename) {
            if (!confirm(`Voulez-vous vraiment supprimer la sauvegarde:\n\n${filename}\n\nCette action est irréversible.`)) {
                return;
            }

            fetch('/maintenance/backup/delete', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: 'filename=' + encodeURIComponent(filename)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Remove row from table
                    const row = document.querySelector(`tr[data-filename="${filename}"]`);
                    if (row) {
                        row.remove();
                    }
                } else {
                    alert('Erreur: ' + data.error);
                }
            })
            .catch(error => {
                alert('Erreur lors de la suppression');
            });
        }

        function rebuildSnapshots() {
            const messageDiv = document.getElementById('snapshot_message');
            messageDiv.className = 'bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4';
            messageDiv.textContent = 'Recalcul en cours...';
            messageDiv.classList.remove('hidden');
            
            fetch('/maintenance/snapshots/rebuild', {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    messageDiv.className = 'bg-green-100 border-l-4 border-green-500 text-green-700 p-4';
                    messageDiv.textContent = data.message;
                    
                    // Reload page after 2 seconds
                    setTimeout(() => window.location.reload(), 2000);
                } else {
                    messageDiv.className = 'bg-red-100 border-l-4 border-red-500 text-red-700 p-4';
                    messageDiv.textContent = 'Erreur: ' + data.error;
                }
            })
            .catch(error => {
                messageDiv.className = 'bg-red-100 border-l-4 border-red-500 text-red-700 p-4';
                messageDiv.textContent = 'Erreur lors du recalcul des snapshots';
            });
        }
    </script>
{% endblock %}
