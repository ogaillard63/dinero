{% extends "layout.twig" %}

{% block title %}{{ transaction ? 'Modifier' : 'Ajouter' }} une transaction{% endblock %}

{% block content %}
    <div class="mb-8">
        <a href="/admin/accounts/{{ account.id }}" class="text-sm text-gray-500 hover:text-black mb-4 inline-block">&larr; Retour au compte</a>
        <h2 class="text-3xl font-light text-gray-800">{{ transaction ? 'Modifier' : 'Ajouter' }} une transaction</h2>
        <p class="text-gray-500">{{ account.name }} - {{ account.bank_name }}</p>
    </div>

    {% if error %}
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
        <p>{{ error }}</p>
    </div>
    {% endif %}

    <div class="bg-white p-8 border border-gray-200 shadow-sm max-w-2xl">
        <form action="{{ transaction ? '/admin/transactions/' ~ transaction.id ~ '/edit' : '/admin/accounts/' ~ account.id ~ '/transactions/create' }}" method="POST">
            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2 uppercase" for="date">
                    Date
                </label>
                <input 
                    class="shadow-none appearance-none border border-gray-300 w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:border-gray-500" 
                    id="date" 
                    name="date" 
                    type="date" 
                    value="{{ transaction ? transaction.date : 'now'|date('Y-m-d') }}"
                    required
                >
            </div>

            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2 uppercase" for="description">
                    Description
                </label>
                <input 
                    class="shadow-none appearance-none border border-gray-300 w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:border-gray-500" 
                    id="description" 
                    name="description" 
                    type="text" 
                    placeholder="Ex: Achat supermarché"
                    value="{{ transaction ? transaction.description : '' }}"
                    required
                >
            </div>

            <div class="grid grid-cols-2 gap-6 mb-6">
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2 uppercase" for="type">
                        Type
                    </label>
                    <select 
                        class="shadow-none appearance-none border border-gray-300 w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:border-gray-500" 
                        id="type" 
                        name="type"
                        required
                    >
                        <option value="credit" {{ transaction and transaction.type == 'credit' ? 'selected' : '' }}>Crédit (+)</option>
                        <option value="debit" {{ transaction and transaction.type == 'debit' ? 'selected' : (not transaction ? 'selected' : '') }}>Débit (-)</option>
                    </select>
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2 uppercase" for="amount">
                        Montant
                    </label>
                    <input 
                        class="shadow-none appearance-none border border-gray-300 w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:border-gray-500" 
                        id="amount" 
                        name="amount" 
                        type="number" 
                        step="0.01"
                        placeholder="0.00"
                        value="{{ transaction ? (transaction.amount < 0 ? transaction.amount * -1 : transaction.amount) : '' }}"
                        required
                    >
                </div>
            </div>

            <div class="flex justify-end space-x-4">
                <a href="/admin/accounts/{{ account.id }}" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-3 px-8 focus:outline-none uppercase tracking-wider transition-colors duration-200">
                    Annuler
                </a>
                <button class="bg-black hover:bg-gray-800 text-white font-bold py-3 px-8 focus:outline-none uppercase tracking-wider transition-colors duration-200" type="submit">
                    {{ transaction ? 'Modifier' : 'Ajouter' }}
                </button>
            </div>
        </form>
    </div>
{% endblock %}
