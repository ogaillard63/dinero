{% extends "layout.twig" %}

{% block title %}{{ transaction ? 'Modifier' : 'Ajouter' }} une transaction{% endblock %}

{% block content %}
    <div class="mb-8">
        <h2 class="text-3xl font-light text-primary">{{ transaction ? 'Modifier' : 'Ajouter' }} une transaction</h2>
        <p class="text-xs text-gray-400 uppercase tracking-tighter mt-1">{{ account.bank_name }} - {{ account.name }}</p>
    </div>

    {% if error %}
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
        <p>{{ error }}</p>
    </div>
    {% endif %}

    <div class="bg-white p-8 border border-gray-200 shadow-sm w-full">
        <form action="{{ transaction ? '/transactions/' ~ transaction.id ~ '/edit' : '/accounts/' ~ account.id ~ '/transactions/create' }}" method="POST">
                <label class="block text-gray-700 text-[10px] font-bold mb-2 uppercase tracking-widest" for="date">
                    Date
                </label>
                <input 
                    class="shadow-none appearance-none border border-gray-300 w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:border-gray-500 mb-6" 
                    id="date" 
                    name="date" 
                    type="date" 
                    value="{{ transaction ? transaction.date : 'now'|date('Y-m-d') }}"
                    required
                >

                <label class="block text-gray-700 text-[10px] font-bold mb-2 uppercase tracking-widest" for="description">
                    Description
                </label>
                <input 
                    class="shadow-none appearance-none border border-gray-300 w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:border-gray-500 mb-6" 
                    id="description" 
                    name="description" 
                    type="text" 
                    placeholder="Ex: Achat supermarché"
                    value="{{ transaction ? transaction.description : '' }}"
                    required
                >

                <div class="grid grid-cols-2 gap-6 mb-8">
                    <div>
                        <label class="block text-gray-700 text-[10px] font-bold mb-2 uppercase tracking-widest" for="type">
                            Type
                        </label>
                        <select 
                            class="shadow-none appearance-none border border-gray-300 w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:border-gray-500" 
                            id="type" 
                            name="type"
                            required
                        >
                            <option value="credit" {{ transaction and transaction.type == 'credit' ? 'selected' : '' }}>Crédit (+)</option>
                            <option value="debit" {{ transaction and transaction.type == 'debit' ? 'selected' : (not transaction ? 'selected' : '') }}>Débit (-)</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-gray-700 text-[10px] font-bold mb-2 uppercase tracking-widest" for="amount">
                            Montant
                        </label>
                        <input 
                            class="shadow-none appearance-none border border-gray-300 w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:border-gray-500" 
                            id="amount" 
                            name="amount" 
                            type="number" 
                            step="0.01"
                            placeholder="0.00"
                            value="{{ transaction ? (transaction.amount < 0 ? transaction.amount * -1 : transaction.amount) : '' }}"
                            required
                        >
                    </div>
                </div>

            <div class="flex justify-end space-x-4">
                <a href="/operations?account_id={{ account.id }}" class="btn btn-outline">
                    Annuler
                </a>
                <button class="btn btn-primary px-10" type="submit">
                    {{ transaction ? 'Modifier' : 'Ajouter' }}
                </button>
            </div>
        </form>
    </div>
{% endblock %}
