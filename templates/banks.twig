{% extends "layout.twig" %}

{% block title %}Banques & Comptes{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-8">
        <h2 class="text-3xl font-light text-primary">Mes Banques</h2>
        <a href="/banks/create" class="bg-success text-white px-6 py-2 uppercase text-sm tracking-wider hover:bg-green-600 transition-colors">Ajouter une banque</a>
    </div>

    <div class="space-y-8">
        {% for bank in banks %}
        <div class="bg-white border border-gray-200 shadow-sm">
            <div class="px-6 py-4 border-b border-gray-100 bg-gray-50 flex justify-between items-center">
                <div>
                    <h3 class="text-xl font-medium text-primary">{{ bank.name }}</h3>
                    <span class="text-sm text-gray-500">{{ bank.accounts|length }} comptes</span>
                </div>
                <div class="flex space-x-2">
                    <a href="/banks/{{ bank.id }}/edit" class="text-xs uppercase font-bold text-gray-500 hover:text-primary px-3 py-1 border border-gray-300 hover:border-primary transition-colors">Modifier</a>
                    <a href="/accounts/create?bank_id={{ bank.id }}" class="text-xs uppercase font-bold text-gray-500 hover:text-primary px-3 py-1 border border-gray-300 hover:border-primary transition-colors">+ Compte</a>
                    <form action="/banks/{{ bank.id }}/delete" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette banque et tous ses comptes ?');" class="inline">
                        <button type="submit" class="text-xs uppercase font-bold text-red-500 hover:text-red-700 px-3 py-1 border border-red-300 hover:border-red-700 transition-colors">Supprimer</button>
                    </form>
                </div>
            </div>
            
            <div class="divide-y divide-gray-100 sortable-accounts" data-bank-id="{{ bank.id }}">
                {% for account in bank.accounts %}
                <div class="px-6 py-3 flex items-center justify-between hover:bg-gray-50 transition-colors group account-item {{ account.is_active == 0 ? 'opacity-50' : '' }}" data-account-id="{{ account.id }}">
                    <div class="drag-handle cursor-move mr-3 text-gray-400 hover:text-gray-600">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M4 8h16M4 16h16" />
                        </svg>
                    </div>
                    <div class="flex-1 flex items-center justify-between">
                        <div class="flex-1">
                            <a href="/accounts/{{ account.id }}" class="text-gray-900 hover:text-primary font-medium">
                                {{ account.name }}
                            </a>
                            {% if account.number %}
                            <span class="text-sm text-gray-500 ml-2">{{ account.number }}</span>
                            {% endif %}
                        </div>
                        <div class="flex items-center space-x-6">
                            <span class="text-sm text-gray-500">{{ account.transaction_count }} op.</span>
                            <span class="text-lg font-bold text-primary min-w-[120px] text-right">
                                {{ account.current_balance|number_format(2, ',', ' ') }} €
                            </span>
                        </div>
                    </div>
                </div>
                {% else %}
                <div class="px-6 py-4 text-center text-sm text-gray-500">Aucun compte pour cette banque.</div>
                {% endfor %}
            </div>
        </div>
        {% else %}
        <div class="text-center py-12 bg-white border border-gray-200">
            <p class="text-gray-500">Aucune banque configurée.</p>
        </div>
        {% endfor %}
    </div>

    <!-- SortableJS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sortableContainers = document.querySelectorAll('.sortable-accounts');
            
            sortableContainers.forEach(container => {
                new Sortable(container, {
                    animation: 150,
                    handle: '.drag-handle',
                    ghostClass: 'bg-gray-100',
                    onEnd: function(evt) {
                        const bankId = container.dataset.bankId;
                        const accountItems = container.querySelectorAll('.account-item');
                        const accounts = [];
                        
                        accountItems.forEach((item, index) => {
                            accounts.push({
                                id: item.dataset.accountId,
                                order: index + 1
                            });
                        });
                        
                        // Send update to server
                        fetch('/accounts/update-order', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ accounts: accounts })
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (!data.success) {
                                console.error('Failed to update order');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                        });
                    }
                });
            });
        });
    </script>
{% endblock %}
