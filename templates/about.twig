{% extends "layout.twig" %}

{% block title %}A propos{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-8 text-center mt-10">
    <h2 class="text-xl text-gray-600 mb-8">A propos</h2>
    <div class="flex justify-center mb-6">
        <img src="/icons/icon-512x512.png" alt="Dinero Logo" class="w-32 h-32 object-contain">
    </div>
    
    <h1 class="text-4xl font-light tracking-wider text-gray-800 mb-2">DINERO</h1>
    
    <div class="space-y-4 text-gray-700">
        <p class="text-lg font-medium">Gestion personnelle de budget multi-comptes</p>
        
        <div class="pt-4 border-t border-gray-100">
            <p><strong>Auteur :</strong> Olivier Gaillard</p>
            <p class="text-sm text-gray-500 mt-1">Version {{ version }} du {{ buildDate }}</p>
        </div>
    </div>
</div>
{% endblock %}
